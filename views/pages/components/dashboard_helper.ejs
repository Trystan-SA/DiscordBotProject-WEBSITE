<!--   ####  SAVE HELPER ####   -->
<!-- Tell you if you made changes, and let you save or discard your changes -->
<div id="ChangesHelper" class="valign-wrapper swing-in-top-fwd">
  <div class="row">
    <div class="col s6">
      <p>Unsaved changes</p>
    </div>

    <div class="col s3">
      <a class="waves-effect waves-light btn redbutton" onclick="DiscardChanges(false)">Discard</a>
    </div>
    
    <div class="col s3">
      <a class="waves-effect waves-light btn greenbutton" onclick="SaveChanges()">Save</a>
    </div>
  </div>
</div>


